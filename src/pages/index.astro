// Este archivo actúa como una puerta de enlace.
// Redirige a los usuarios al login si no están autenticados,
// o al dashboard si ya tienen una sesión activa.
const isAuthenticated = Astro.cookies.has('refresh_token');

if (!isAuthenticated) {
  return Astro.redirect('/login');
}

return Astro.redirect('/dashboard');
