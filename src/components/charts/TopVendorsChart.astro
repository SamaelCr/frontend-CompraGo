<div id="top-vendors-chart" style="width: 100%; height: 400px;"></div>

<script>
  import * as echarts from 'echarts';

  document.addEventListener('astro:page-load', () => {
    const chartDom = document.getElementById('top-vendors-chart');
    if (!chartDom) return;

    const chartInstance = echarts.getInstanceByDom(chartDom);
    if (chartInstance) {
      chartInstance.dispose();
    }

    const myChart = echarts.init(chartDom);
    const option = {
      tooltip: {
        trigger: 'axis',
        axisPointer: { type: 'shadow' },
      },
      grid: {
        left: '3%',
        right: '4%',
        bottom: '3%',
        containLabel: true,
      },
      xAxis: {
        type: 'value',
        boundaryGap: [0, 0.01],
      },
      yAxis: {
        type: 'category',
        data: [
          'Suministros B, S.R.L.',
          'Tecno-Soluciones Globales',
          'Proveedor Z',
          'Proveedor A, C.A.',
          'Otro Proveedor Ltda.',
        ].reverse(), // Se invierte para que el mÃ¡s grande quede arriba
      },
      series: [
        {
          name: 'Monto Total',
          type: 'bar',
          data: [18203, 23489, 29034, 35234, 41040].reverse(), // Se invierte para coincidir con las etiquetas
          itemStyle: { color: '#f59e0b' }, // Un color amarillo/naranja
        },
      ],
    };
    myChart.setOption(option);
    window.addEventListener('resize', () => myChart.resize());
  });
</script>