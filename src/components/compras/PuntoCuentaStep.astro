---
import Card from '../ui/Card.astro';
import Input from '../ui/Input.tsx';
import Select from '../ui/Select';
import Textarea from '../ui/Textarea';
---
<Card title="Paso 3: Punto de Cuenta" subtitle="Autorización de la contratación.">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <Input label="Fecha del Punto de Cuenta" type="date" value="2024-05-23" helperText="Admins pueden modificar esta fecha." />
    <Select label="Consulta de Precio" options={["Compras", "Servicios"]} />
  </div>
  <div class="mt-6">
    <Input label="Asunto" value="Adquisición de material de oficina" helperText="Autocompletado desde la requisición." />
  </div>
  <div class="mt-6">
    <Textarea label="Síntesis" value="Se requiere la compra de... para el departamento de..." rows={3} helperText="Autocompletado y editable." />
  </div>
  <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
    <Input label="Categoría Programática" placeholder="Obtenido de SIGECOF..." />
    <Input label="UEL" placeholder="Obtenido de SIGECOF..." />
  </div>
</Card>