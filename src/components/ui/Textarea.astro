---
interface Props {
  label: string;
  rows?: number;
  placeholder?: string;
  value?: string;
  helperText?: string;
}
const { label, rows = 3, placeholder, value, helperText } = Astro.props;
const id = label.toLowerCase().replace(/\s+/g, '-');
---
<div>
  <label for={id} class="block mb-2 text-sm font-medium text-slate-700">{label}</label>
  <textarea id={id} name={id} rows={rows} class="block p-2.5 w-full text-sm text-slate-900 bg-slate-50 rounded-lg border border-slate-300 focus:ring-blue-500 focus:border-blue-500" placeholder={placeholder}>{value}</textarea>
  {helperText && <p class="mt-2 text-xs text-slate-500">{helperText}</p>}
</div>